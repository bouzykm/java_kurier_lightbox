<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvWezel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        android:text="Wezel"
        android:textColor="#006000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/tvLiczbaTorebLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWezel"
        android:layout_alignStart="@+id/tvWezel"
        android:layout_marginBottom="10dp"
        android:text="Liczba toreb: "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvRaportMK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/tvLiczbaTorebLabel"
        android:text="@string/tick" />

    <TextView
        android:id="@+id/tvLiczbaToreb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWezel"
        android:layout_toEndOf="@id/tvLiczbaTorebLabel"
        android:text="7"
        android:textColor="#006000"
        android:textSize="20sp" />


</RelativeLayout>